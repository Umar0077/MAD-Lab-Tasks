import React from "react";
import { View, Text, StyleSheet } from "react-native";

// First component
const HelloWorldOne = () => (
  <View style={styles.box}>
    <Text>Hello world</Text>
  </View>
);

// Second component
const HelloWorldTwo = () => (
  <View style={styles.box}>
    <Text>Hello world</Text>
  </View>
);

export default function App() {
  return (
    <View style={styles.container}>
      <HelloWorldOne />
      <HelloWorldTwo />
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: "center",
    alignItems: "center",
    backgroundColor: "#fff",
  },
  box: {
    margin: 10,
    padding: 20,
    backgroundColor: "#eee",
    borderRadius: 5,
  },
});
